<form action="/login" method="POST" class="needs-validation" novalidate>

    <div class="form-group row">
      <label for="inputRoll31" class="col-sm-2 col-form-label">Email-id</label>
      <div class="col-sm-10 mb-3 md-form" style="display: inline-block;">
        <input type="email" class="form-control div-size" name='email' id="inputRoll31" placeholder="e.g xyz@iitbbs.ac.in" required pattern="^[A-Za-z0-9]+@iitbbs.ac.in$">
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          please provide valid email-id!/ no gmail account
        </div>
      </div>

    </div>


      <br>
      
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Sign In</button>
      </div>
    </div>
</form>




